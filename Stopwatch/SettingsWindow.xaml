<Window x:Class="Stopwatch.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stopwatch"
        mc:Ignorable="d"
        Title="Settings" Style="{StaticResource WindowStyle}" Width="600">

    <DockPanel Margin="20">
        <WrapPanel HorizontalAlignment="Center">
            <Label Style="{StaticResource SmallText}">Keybindings:</Label>
            <CheckBox VerticalAlignment="Center" Margin="5,4,0,0" Name="KeybindingsToggle" IsChecked="True"></CheckBox>
        </WrapPanel>
    </DockPanel>
</Window>
