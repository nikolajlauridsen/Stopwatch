<Window x:Class="Stopwatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stopwatch"
        mc:Ignorable="d"
        Title="Stopwatch" Style="{StaticResource WindowStyle}">



    <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <WrapPanel DockPanel.Dock="Top" HorizontalAlignment="Right">
            <Button Style="{StaticResource SettingsButton}" Name="SettingsBtn">
                <Image Source="Project files/settings icon.png" ></Image>
            </Button>
        </WrapPanel>

        <Label DockPanel.Dock="Top" Style="{StaticResource DisplayText}" HorizontalAlignment="Center" Name="timeLbl">00:00:00.00</Label>
        
        <WrapPanel DockPanel.Dock="Top" HorizontalAlignment="Center">
            <Button Style="{StaticResource PrettyButton}" Name="StartBtn">Start</Button>
            <Button Style="{StaticResource PrettyButton}" Name="StopBtn" >Reset</Button>

        </WrapPanel>
    </DockPanel>
</Window>


